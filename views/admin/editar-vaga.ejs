
<%- include('header') %>       
<h2>
    Editar Vaga:
    <a href='/admin/vagas'>Vagas</a>
</h2>
<div>
    <form action="" method="POST">
        <label for="">Título</label>
        <input type="text" name="titulo" value="<%= vaga.titulo %>"><br>

        <label for="">Descrição</label>
        <textarea name="descricao" id="" cols="30" rows="10"><%= vaga.descricao %></textarea><br>

        <label for="">Categoria</label>
        <select name="categoria" id="">
            <% categorias.forEach(val => { %>
                <option value='<%= val.id %>' <% if(vaga.categoria == val.id) { %> selected <% } %> ><%= val.categoria %></option>
            <% }) %>
        </select><br>

        <button>Salvar</button>
    </form>
</div>
<%- include('footer') %>   

